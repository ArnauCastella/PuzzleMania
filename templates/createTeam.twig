{% extends "teams.twig" %}

{% block createTeam %}
<div class="createTeamForm" style="margin-left: 15px; margin-top: 30px;">
    <h3>Create a Team</h2>
    <form action="/create-team" method="post" enctype="multipart/form-data">
        <label for="teamName">Team Name:</label>
        <input type="text" id="teamName" name="teamName" value=""><br><br>            
        <input style =  "padding: 10px;
                        background-color: #4CAF50;
                        color: white;
                        border: none;
                        border-radius: 4px;
                        font-size: 12px;
                        cursor: pointer;
                        hover: background-color: #45a049;"
        type="submit" value="Create">
    </form>
</div>
{% endblock %}
