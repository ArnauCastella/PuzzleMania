{% extends "base.twig" %}

{% block head %}
    <head>
        <title>Puzzlemania - Teams</title>
        <meta name="description" content="This is the game page of Puzzlemania.">
        <meta name="author" content="Iván Martínez & Arnau Castellà">

        {% block styles %}
            <link rel="stylesheet" href="/assets/styles/game.css"/>
        {% endblock %}
    </head>
{% endblock %}

{% block title %}Teams | PuzzleMania{% endblock %}

{% block header %}
{% endblock %}

{% block content %}
<div class="descriptionMessage"> 
    <h2>Welcome to Puzzlemania!</h1>
    <p>Name of the team: {{teamName}}<p>
    <p name="instructions">
    Instructions:<br>
    1. You start with 10 points<br>
    2. Each time you solve a riddle you get 10 extra points, but if the answer is incorrect you lose 10 points<br>
    3. The game ends when you solve 3 riddles or you lose all points</p>
    <form method="POST">
        <input type="submit" class="button" value="Start">
    </form>
</div>

