{% extends "teams.twig" %}

{% block showEmptyTeams %}
    {% for row in myArray %}   
        <table style="margin-left: 15px; margin-top: 15px; border-collapse: collapse; width: 100%;">
            <tr>
                <th style="text-align: left; padding: 8px; border-bottom: 1px solid #ddd;">Team Name</th>
                <th style="text-align: left; padding: 8px; border-bottom: 1px solid #ddd;">Participants Num</th>
                <th style="text-align: left; padding: 8px; border-bottom: 1px solid #ddd;"></th>
            </tr>

            <tr>
                <td style="text-align: left; padding: 8px; border-bottom: 1px solid #ddd;">{{row.getTeamName()}}</td>
                <td style="text-align: left; padding: 8px; border-bottom: 1px solid #ddd;">{{row.getParticipantsNum()}}</td>
                <td style="text-align: left; padding: 8px; border-bottom: 1px solid #ddd;">
                <form action="/joinTeamButton" method="post">
                    <input type="hidden" name="teamName" value="{{row.getTeamName()}}">
                    <button type="submit" style="background-color: #4CAF50; color: white; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer; hover:background-color: #3e8e41;">Join</button>
                </form>
            </tr>
        </table>
    {% endfor %}
{% endblock %}
